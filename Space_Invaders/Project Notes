Entity Variable Naming Convention

# --- Entity --- #

entityX = float
entityY = float

entityX_change = float
entityY_change = float

entity_state = bollean

entity_img = str    (relative adress)


# --- Font Entity --- #

entityX = float
entityY = float

entity_style = str
entity_font_size = int
entity_font_text = str
entity_font_object = surface ? pygame